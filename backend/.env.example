# Django Settings
SECRET_KEY=           # Auto-generated: python manage.py generate_secret_key
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Trading Data
# Path to the directory containing daemon output files:
#   kalshi_pnl.json, kalshi_unified_state.json, kalshi_unified_log.txt
TRADING_DIR=../trading/github-release

# Kalshi Integration
# Path to the directory containing kalshi_unified.py (the trading daemon)
KALSHI_DAEMON_DIR=../trading/github-release

# Path to Kalshi API credentials directory (containing kalshi.json and kalshi_private.pem)
# Defaults to ~/.openclaw/.secrets if not set
KALSHI_SECRETS_DIR=~/.openclaw/.secrets

# Database (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Logging
LOG_LEVEL=INFO
